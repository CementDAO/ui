{
    "name": "client",
    "version": "0.0.1",
    "private": true,
    "engineStrict": true,
    "engines": {
        "node": ">= 10.12.0",
        "npm": ">= 6.4.0",
        "yarn": ">= 1.10.0"
    },
    "scripts": {
        "docker": "npm run deploy-contracts && npm run start",
        "deploy-network": "scripts/local_with_docker.sh",
        "deploy-contracts": "DEPLOY_ACTION=start scripts/local_with_node.sh",
        "test-config": "node -r esm __test-config__/config.js",
        "test": "react-scripts test --env=jsdom --coverage",
        "pretest:final": "npm run deploy-contracts && npm run test-config",
        "test:final": "react-scripts test --env=jsdom --coverage",
        "posttest:final": "DEPLOY_ACTION=stop scripts/local_with_node.sh",
        "docs": "typedoc --out docs ./src",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "eject": "react-scripts eject",
        "link-contracts": "run-script-os",
        "link-contracts:linux:darwin": "cd src && ln -s ../../Contracts/build/contracts contracts",
        "link-contracts:win32": "cd src && mklink \\D contracts ..\\..\\Contracts\\build\\contracts"
    },
    "dependencies": {
        "@types/react": "16.8.3",
        "@types/react-dom": "16.8.2",
        "@types/react-router-dom": "4.3.1",
        "@types/styled-components": "^4.1.11",
        "bignumber.js": "^8.0.2",
        "react": "^16.8.2",
        "react-dom": "^16.8.2",
        "react-router-dom": "^4.3.1",
        "react-scripts": "2.1.5",
        "rimble-ui": "^0.4.2",
        "prop-types": "^15.5.4",
        "styled-components": "^4.1.3",
        "truffle-contract": "4.0.5",
        "typescript": "3.3.3",
        "web3": "1.0.0-beta.35",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.9.1",
        "enzyme-async-helpers": "^0.9.1",
        "eslint": "5.12.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-react": "^7.12.4",
        "esm": "3.2.6",
        "jest": "^23.0.0",
        "run-script-os": "1.0.3",
        "tslint": "5.13.0",
        "tslint-react": "3.6.0",
        "typedoc": "^0.14.2",
        "typescript-tslint-plugin": "0.3.1",
        "portscanner": "2.2.0"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!./node_modules/",
            "!src/App.tsx",
            "!src/index.tsx"
        ]
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
